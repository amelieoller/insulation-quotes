<h1>Insulation Types</h1>

<h3>Filter Insulation Types by Width:</h3>
<%= form_tag('/insulation_types', method: 'get') do %>
   <div class="input-group">
      <%= select_tag 'width', options_from_collection_for_select(InsulationType.all.uniq{ |i| i.width}, 'width', 'width'), include_blank: true, class: 'form-control' %>
      <span class="input-group-btn">
         <%= submit_tag 'Filter', class: 'btn btn-default' %>
      </span>
   </div>
<% end %>

<br>

<ul class="list-group">
   <% @insulation_types.each do |type| %>
      <li class="list-group-item">
         <strong>Name:</strong> <%= type.name %> |
         <strong>Coverage:</strong> <%= type.coverage %> |
         <strong>R-Value:</strong> <%= type.r_value %> |
         <strong>Thickness:</strong> <%= type.thickness %> |
         <strong>Width:</strong> <%= type.width %> |
         <strong>Facing:</strong> <%= type.facing %> |
         <strong>Price (per bag):</strong> $<%= type.price %>
         <div class="btn-group" role="group"> 
            <%= link_to 'View', insulation_type_path(type), method: 'get', class: 'btn btn-primary' %>               
            <%= render partial: 'layouts/button_group', locals: {type: type, model: 'insulation_type'} %>
         </div>
      </li>
   <% end %>
</ul>

<%= link_to 'Create a new Insulation Type', new_insulation_type_path, class: 'btn btn-primary' %>
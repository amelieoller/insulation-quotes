<h1>All Quotes</h1>

<ul class="list-group">
   <% @quotes.each do |quote| %>
      <li class="list-group-item">
         <strong>Customer Name:</strong> <%= quote.customer_name %> |
         <strong>Address:</strong> <%= quote.city %>, <%= quote.state %> <%= quote.zip_code %> |
         <strong>Created on:</strong> <%= quote.applications.first.insulation_type.created_at.strftime("%a, %e %b %Y") %> |
         <strong>Updated on:</strong> <%= quote.applications.first.insulation_type.updated_at.strftime("%a, %e %b %Y") %>
         <div class="btn-group" role="group"> 
            <%= link_to 'View', quote_path(quote), method: 'get', class: 'btn btn-primary' %>               
            <%= render partial: 'quotes/button_group', locals: {quote: quote} %>
         </div>
      </li>
   <% end %>
</ul>